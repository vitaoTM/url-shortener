<div>
  <h1>Link Shortener</h1>

  <div>
    <%= form_with model: Link.new do |form| %>
      <div class="flex gap-2 items center">
        <%= form.url_field :url, required: true, autofocus: true, placeholder: "https://example.com", class: "flex-grow rounded" %>
        <%= form.button "Save", class: "px-3 py-2 bg-gray-100 rounded" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= render @links %>
  </div>

</div>