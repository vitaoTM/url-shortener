<%= tag.div id: dom_id(link) do %>
  <div class="grid grid-cols-10 gap-1 py-4">
    <div class="inline-block">
      <%= link_to link.to_param, link %>
    </div>
    <div class="">
    <%= link_to view_path(link), target: :_blank, data: { turbo: false } do %>
      <svg xmlns="http://www.w3.org/2000/svg"
        fill="none" viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 inline-block">
        <path stroke-linecap="round"
          stroke-linejoin="round"
          d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
      </svg>
    <% end %>
    </div>
    <div class="inline-block">
      <%= link_to "Copy", link %>
    </div>
    <div class="col-span-2 text-center inline-block">
      <%= link_to (pluralize link.views_count, "view"), link %>
    </div>
    <div class="inline-block col-start-6 col-end-10">
      <%= link.url %>
    </div>
  </div>
<% end %>
